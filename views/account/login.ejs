<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <form class="loginForm forms" action="/account/login" method="post">
                        <div>
                            <label for="email">Email: </label>
                            <input type="email" id="email" name="account_email" required
                                value="<%= locals.account_email %>">
                        </div>
                        <div>
                            <label for="password">Password:</label>
                            <input type="password" id="password" name="account_password" required
                                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                        </div>
                        <input class="login-button" type="submit" value="Login">
                        <hr>
                        <p>No account? <a class="signup-link" href="/account/registration">Sign-up</a></p>
                    </form>