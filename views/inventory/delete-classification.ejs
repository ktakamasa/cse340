<!-- Content Heading -->
<% if (title) { %>
<h1>
    <%= title %>
</h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error=> { %>
    <li>
        <%= error.msg %>
    </li>
    <% }) %>
</ul>
<% } %>

<form id="deleteClassificationForm" class="classificationDeleteForm forms" action="/inv/delete-classification"
    method="post">
    <p>DELETE IS PERMANENT!</p>

    <label for="classification_id">Classification: </label>
    <select id="classification_id" name="classification_id" required>
        <%- classificationSelect %>
    </select>

    <input class="classificationDelete-button form-button" type="submit" value="Delete Classification">

    <input type="hidden" name="inv_id" <% if(locals.classification_id) { %> value="<%= locals.classification_id %>"
        <% } %>>
</form>